<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp5"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="@dimen/dp2">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp8"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/img_country_flag"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp30"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_flag"/>
                <TextView
                        android:id="@+id/txt_language_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_marginRight="@dimen/dp8"
                        android:textSize="@dimen/sp16"
                        android:layout_gravity="center"
                        android:text="assasssssss"
                        android:textStyle="bold"/>
            </LinearLayout>
            <RadioButton
                    android:id="@+id/rb_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/selector_radio_button"
                    android:checked="true"
                    android:layout_marginRight="@dimen/dp8"
                    android:minHeight="@dimen/dp40"
                    android:button="@null"
                    android:drawableTint="@color/app_color"
                    android:drawablePadding="@dimen/dp5"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>