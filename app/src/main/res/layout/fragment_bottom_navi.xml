<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_threeTabmessageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:gravity="center"
                android:text="Hi mom!" />

            <com.roughike.bottombar.BottomBar
                android:id="@+id/threeTabbottomBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                app:bb_tabXmlResource="@xml/bottombar_tabs_three" />
            <TextView
                android:id="@+id/txt_fiveTabmessageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:gravity="center"
                android:text="Hi mom!" />

            <com.roughike.bottombar.BottomBar
                android:id="@+id/fiveTabbottomBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                app:bb_tabXmlResource="@xml/bottombar_tabs_five"
                app:bb_behavior="iconsOnly" />
            <TextView
                android:id="@+id/txt_fiveColorTabmessageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:gravity="center"
                android:text="Hi mom!" />

            <com.roughike.bottombar.BottomBar
                android:id="@+id/fiveTabColorBottomBar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                app:bb_tabXmlResource="@xml/bottombar_tabs_color_changing"
                app:bb_behavior="shifting|underNavbar" />
            <TextView
                android:id="@+id/txt_customTabmessageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:gravity="center"
                android:text="Hi mom!" />

            <com.roughike.bottombar.BottomBar
                android:id="@+id/customTabbottomBar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                app:bb_tabXmlResource="@xml/bottombar_tabs_five"
                app:bb_behavior="shifting"
                app:bb_inActiveTabAlpha="0.3"
                app:bb_inActiveTabColor="@color/colorAccent"
                app:bb_activeTabColor="@color/colorAccent"

                app:bb_titleTextAppearance="@style/CustomTitleTextAppearance"/>
            <!--app:bb_titleTypeFace="fonts/GreatVibes-Regular.otf"-->
            <TextView
                android:id="@+id/txt_badgeMessageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomBar"
                android:gravity="center"
                android:text="Hi mom!" />

            <com.roughike.bottombar.BottomBar
                android:id="@+id/badgeBottomBar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                app:bb_tabXmlResource="@xml/bottombar_tabs_three" />
        </LinearLayout>

    </RelativeLayout>
</layout>