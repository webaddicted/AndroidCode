<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Font.FreshcaRegular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@fonts/Freshca-Regular.ttf
        </item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="NewTextStyle_13_42_medium_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp19</item>
        <item name="android:textAppearance">@style/TextAppearance.Freshca_Regular</item>
    </style>

    <style name="TextAppearance.Freshca_Regular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Freshca-Regular.ttf</item>
    </style>

    <style name="NewTextStyle_13_42_angelina_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp19</item>
        <item name="android:textAppearance">@style/TextAppearance.angelina_script</item>
    </style>

    <style name="TextAppearance.angelina_script" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/angelina_script_regular.ttf</item>
    </style>
    <!--====================================================================-->
    <!--{START TextInputLayout}-->
    <style name="EditTextWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="counterOverflowTextAppearance">@style/CounterOverFlow</item>
        <item name="counterTextAppearance">@style/CounterText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:layout_marginTop">@dimen/dp7</item>
        <item name="android:layout_marginLeft">@dimen/dp45</item>
        <item name="android:layout_marginRight">@dimen/dp45</item>
        <item name="hintTextAppearance">@style/CustomHint</item>
    </style>

    <style name="CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CustomHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/sp11</item>
        <item name="android:textColor">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:textColorHint">@color/green</item>
        <item name="android:textAppearance">@style/TextAppearance.angelina_script</item>
    </style>

    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textColorHint">@color/red</item>
    </style>
    <!--{ END TextInputLayout }-->
    <!--{ START TextInputEditText }-->

    <style name="Edittext">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/brown</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:singleLine">true</item>
        <item name="android:theme">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <!--before entered text underline-->
        <item name="colorControlNormal">@color/brown</item>
        <!--after entered text underline-->
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
    </style>
    <!--{ END TextInputEditText }-->
    <!--==========================================================================-->

    <style name="checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:buttonTint">@color/app_color</item>
        <item name="android:checked">false</item>
        <item name="android:paddingLeft">@dimen/dp15</item>
        <item name="android:paddingRight">@dimen/dp15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_color</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_btn_corner</item>
        <item name="android:minHeight">@dimen/dp40</item>
        <item name="android:minWidth">@dimen/dp180</item>
        <item name="android:elevation">@dimen/dp10</item>
        <item name="android:paddingLeft">@dimen/dp13</item>
        <item name="android:paddingRight">@dimen/dp13</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
    </style>

    <style name="TextView_Regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="TextView_Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/red</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:max">100</item>
    </style>

    <style name="SeekBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/dp15</item>
        <item name="android:minWidth">@dimen/dp15</item>
        <item name="android:maxHeight">@dimen/dp15</item>
        <item name="android:maxWidth">@dimen/dp15</item>
        <item name="android:progress">0</item>
    </style>

    <style name="switch_text_appearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="CustomStarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/selector_ratingbar</item>
        <item name="android:minHeight">@dimen/dp28</item>
        <item name="android:maxHeight">@dimen/dp28</item>
    </style>
    <!--{START DIALOG STYLE WITH ANIMATION}-->
    <style name="AlertDialogStyle" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/app_color</item>
        <item name="android:colorAccent">@color/app_color</item>
        <item name="android:textColorPrimary">@color/app_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--<item name="android:windowAnimationStyle">@style/DialogSlideUpAnimation</item>-->
    </style>

    <style name="DialogLeftRightAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_right</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
    <!--{END DIALOG STYLE WITH ANIMATION}-->
    <style name="tab_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
